UseColor: true

Checks: >
    bugprone-*,
    cppcoreguidelines-*,
      -cppcoreguidelines-avoid-magic-numbers,-warnings-as-errors,
    google-*,
    performance-*,
    llvm-*,
    misc-*,
    modernize-*,
    readability-*,
     -readability-avoid-const-params-in-decls,
     -readability-magic-numbers,
     -readability-static-accessed-through-instance,

HeaderFilterRegex: ".*"

WarningsAsErrors: "*"